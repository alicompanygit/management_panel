{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "maxNodeModuleJsDepth": 10,
    "noErrorTruncation": true,
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.js", "**/*.vue"],
  "exclude": ["node_modules", "dist", ".output"]
}